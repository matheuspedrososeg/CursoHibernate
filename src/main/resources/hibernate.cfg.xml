<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sys</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <property name="hibernate.show_sql">true</property>

        <property name="hibernate.format_sql">true</property>


        <!-- Mention annotated class -->
        <mapping class="com.curso.data.entities.User"/>
        <mapping class="com.curso.data.entities.TimeTest"/>
        <mapping class="com.curso.data.entities.Bank"/>
        <mapping class="com.curso.data.entities.Credential"/>
        <mapping class="com.curso.data.entities.Account"/>
        <mapping class="com.curso.data.entities.Transaction"/>
        <mapping class="com.curso.data.entities.Budget"/>
        <mapping class="com.curso.data.entities.Currency"/>
        <mapping class="com.curso.data.entities.Market"/>
        <mapping class="com.curso.data.entities.Stock"/>
        <mapping class="com.curso.data.entities.Investment"/>
        <mapping class="com.curso.data.entities.Bond"/>
        <mapping class="com.curso.data.entities.Portfolio"/>



    </session-factory>
</hibernate-configuration>
